// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Flower {
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    id        String   @id @default(cuid())
    name    String 
    description String
    coordinateX Float @default(0)
    coordinateY Float @default(0)
    howOftenToWaterInDays Int @default(2)
    dateOfLastWatering DateTime @default(now())
    minTemperature Float @default(0)
    maxTemperature Float @default(0)
}

model FlowerDatabase{
    id  Int @unique
    latin String
    family String
    common String
    category String
    origin String
    climate String
    tempmax Float
    tempmin Float
    ideallight String
    toleratedlight String
    watering String
}